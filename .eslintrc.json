{
  "extends": ["next/core-web-vitals", "airbnb", "airbnb-typescript"],
  "rules": {
    "semi": "warn",
    "react/jsx-filename-extension": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-one-expression-per-line": "off",
    "linebreak-style": "off",
    "operator-linebreak": "off",
    "implicit-arrow-linebreak": "off",
    "object-curly-newline": "off",
    "react/button-has-type": "off",
    "react/require-default-props": "off",
    "@typescript-eslint/indent": "off",
    "@typescript-eslint/explicit-function-return-type": "error", // Obligation de typer les retours de fonction
    "@typescript-eslint/naming-convention": [
      "error",
      { "selector": "typeLike", "format": ["PascalCase"] }
    ], // Types et interfaces en PascalCase
    "@typescript-eslint/consistent-type-definitions": ["error", "interface"], // Utilisation exclusive des interfaces, types interdits
    "@typescript-eslint/no-duplicate-type-constituents": "error", // Interdiction de déclarer plusieurs fois le même type dans les unions/intersections
    "@typescript-eslint/no-empty-interface": "error", // Interdiction de déclarer des interfaces vides
    "@typescript-eslint/no-inferrable-types": "error" // Interdiction de déclarer des types inférables
  },
  "parserOptions": {
    "project": "./tsconfig.json" // find the closest "./tsconfig.json" file - can cause some perf regressions
  }
}
